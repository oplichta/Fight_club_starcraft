.container
  .row
  .col-md-6.col-md-offset-3
    %h1 Best fighters
    -@fighters.each do |fighter|
      .panel
        .fighter-header
          = link_to (image_tag fighter.image.url(:medium), class:'img-responsive img-circle'), fighter_path(fighter)
        .fighter-bottom
          .list-group
            .list-group-item.text-center
              %h4= fighter.name
              = fighter.last_name
              %h4 Experience
              = fighter.experience
